<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MagicLists"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  x:Class="MagicLists.MainPage"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource TextStyleLargeFontSize}"
    Foreground="{StaticResource PhoneForegroundBrush}"
>

    <Grid x:Name="LayoutRoot" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>



        <!--ContentPanel - place additional content here-->
        <Grid x:Name="ContentPanel" Grid.Row="1" Margin="0,0,14,0" Background="#FFFDFDFD" HorizontalAlignment="Right" Width="376">
            <Button Content="Goto Parse List" HorizontalAlignment="Left" Margin="40,83,0,0" VerticalAlignment="Top" BorderBrush="Black" Foreground="#FF3A0D0D" Click="Button_Click_1"/>



        </Grid>
    </Grid>

    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton Label="Share" Icon="Like" Click="AppBarButton_Click"/>
            <AppBarButton Label="Email" Icon="Send"  Click="AppBarButton_Click"/>
            <AppBarButton Label="SMS" Icon="Send"  Click="AppBarButton_Click"/>

        </CommandBar>
    </Page.BottomAppBar>

</Page>